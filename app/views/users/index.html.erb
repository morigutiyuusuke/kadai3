<div class="container px-5 px-sm-0">
    <div class = "row">
<%= render 'users/list', user: @user, book: @book %>
 <div class='col-md-8 offset-md-1'>
 <h2>Users</h2>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
     <% @users.each do |list| %>
      <tr>
        <td>
          <%= attachment_image_tag list,:profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" %> 
          </td>
        <td><%= list.name %></td>
        <td><%=link_to "Show",user_path(list.id)%></td>
      </tr>
      <% end %>
  </thead>
  </div>
  </div>
 