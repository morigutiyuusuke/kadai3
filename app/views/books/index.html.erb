<div class="container px-5 px-sm-0">
    <div class = "row">
<%= render 'users/list', user: @user, book: @book %>
<div class='col-md-8 offset-md-1'>
<h2>Books</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @books.each do |list| %>
      <tr>
        <td>
          <%=link_to user_path(list.user_id ) do %>
          <%= attachment_image_tag list.user,:profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"  %> 
          <% end %>
          </td>
        <td><%=link_to list.title,book_path(list.id) %></td>
        <td><%=list.body%></td>
      </tr>
      <% end %>
      </tbody>
      </table>
      </div>
      </div>
      </div>