<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  

  <body>
    <header>
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
       <%= link_to "Bookers", root_path, class:"navbar-brand" %>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to user_path(current_user.id),class:"nav-link text-light" do %>
        <span class="fas fa-home">Home</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to users_path,class:"nav-link text-light" do %>
        <span class="fas fa-users">Users</span>
        <% end %>
      </li>
       <li class="nav-item">
         <%= link_to books_path,class:"nav-link text-light" do %>
        <span class="fas fa-book-open">Books</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to destroy_user_session_path, method: :delete,class:"nav-link text-light" do %>
        <span class="fas fa-sign-out-alt">Log out</span>
        <% end %>
      </li>
    <% else %>
      <li  class="nav-item">
        <%= link_to root_path,class:"nav-link text-light" do %>
        <span class="fas fa-home">Home</span>
        <% end %>
      </li>
      <li  class="nav-item">
        <%= link_to home_about_path,class:"nav-link text-light" do %>
        <span class="fas fa-link">About</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to new_user_registration_path,class:"nav-link text-light" do %>
        <span class="fas fa-user-plus">Sign up</span>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to  new_user_session_path,class:"nav-link text-light" do %>
        <span class="fas fa-sign-in-alt">Log in</span>
        <% end %>
      </li>
    <% end %> 
     </ul>
  </div>
</nav>
    </header>
     
     
    <main class="mb-auto">
    <%= yield %>
    </main>
  </body>
</html>
